{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "esnext",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "module": "preserve",
    "noEmit": true,

    "lib": ["esnext"],

    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
